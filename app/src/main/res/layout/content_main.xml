<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <ImageView
        android:id="@+id/init_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/frame_size"
        android:paddingLeft="@dimen/frame_size"
        android:paddingRight="@dimen/frame_size"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:src="@drawable/emo2"
        android:contentDescription="@string/initialdescription"/>
</android.support.constraint.ConstraintLayout>